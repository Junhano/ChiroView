#:import utils kivy.utils

<SecondScreen>:
	FloatLayout:
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#D8B5AE")
			Rectangle:
				size: self.size
				pos: self.pos
		
		GridLayout:
			rows:1 
			canvas:
				Color:
					rgb:utils.get_color_from_hex("#67697C")
				Rectangle:
					size: self.size
					pos:self.pos
			pos_hint: {"top": 1}
			size_hint:1,0.1
		
		Image:
			source:"icons/home.png"
			pos_hint: {"top": 0.9, "x": 0.1}
			size_hint:0.8,0.55
			id: modifyimage
			
				

			
		
		GridLayout:
			cols: 2
			rows: 2
			pos_hint: {"top": 0.3}
			size_hint: 1, 0.1
			Label: 
				text: "Vertical Line"
			TextInput:
				hint_text: "Enter a number"
				multiline: False
				id: verticalLine
			Label: 
				text: "Horizontal Line"
			TextInput:
				hint_text: "Enter a number"
				multiline: False
				id: horizontalLine
		
		Button: 
			pos_hint: {"top": 0.19, "x": 0.1}
			size_hint: 0.2, 0.07
			text: "Submit"
			on_release:
				if verticalLine.text != "" and horizontalLine.text != "": app.modify_image(verticalLine.text, horizontalLine.text,modifyimage) 
				verticalLine.text = ""
				horizontalLine.text = ""

	
		Button:
			pos_hint: {"top":0.19, "x": 0.4}
			size_hint: 0.2, 0.07
			text: "Clear"
			on_release:
				app.clean_image(modifyimage)		
		
		
		
		Button:
			pos_hint:{"top": 0.19, "x": 0.7}
			size_hint: 0.2, 0.07
			text: "Save"
			on_release:
				print("Saved")
		
		
		
		
		GridLayout:
			rows: 1			
			canvas:
				Color:
					rgb:utils.get_color_from_hex("#67697C")
				Rectangle:
					size: self.size
					pos:self.pos
			pos_hint: {"top": 0.1}
			size_hint:1,0.1
			ImageButton:
				source:"icons/home.png"
				on_release:
					app.change_screen("home_screen")
			ImageButton:
				source:"icons/OpenGalleryButton.png"
				on_release:
					app.change_screen("third_screen")
			ImageButton:
				source: "icons/photoshopButton.png"
				on_release:
					app.change_screen("second_screen")
