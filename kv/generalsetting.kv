#:import utils kivy.utils
#:import languageDict1 languageDict.LanguageDict
#:import MDFloatLayout kivymd.uix.floatlayout.MDFloatLayout


<GeneralSetting>:
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'icons/BackGround.jpeg'
	MDFloatLayout:

		MDIconButton:
			icon: 'keyboard-return'
			pos_hint: {"center_x": 0.05, "center_y" : 0.95}
			user_font_size: "64sp"
			on_release:
				app.change_screen("home_screen")

		MyButton:
			background_color: 0,0,0,0
			text: languageDict1.langDict["SwitchLang"][app.state]
			id: switch_lang
			pos_hint: {"top": 0.85, "x": 0.25}
			size_hint: 0.5,0.1
			on_release:
				app.openChooseLanguageDialog()
		
		MyButton:	
			background_color: 0,0,0,0
			text: languageDict1.langDict["ChangeLine"][app.state]
			id: switch_mode
			pos_hint:{"top": 0.7, "x":0.25}
			size_hint: 0.5, 0.1
			on_release:
				app.grid_image_create_setting()

		MyButton:
			background_color: 0,0,0,0
			text: languageDict1.langDict["SetRotationDegree"][app.state]
			id: switch_rd
			pos_hint: {"top": 0.55, "x": 0.25}
			size_hint: 0.5, 0.1
			on_release:
				app.setDegreeDialog()

		MyButton:
			background_color: 0,0,0,0
			text: languageDict1.langDict["ResetFactorySetting"][app.state]
			id: reset_setting
			pos_hint:{"top": 0.4, "x":0.25}
			size_hint: 0.5, 0.1
			on_release:
				app.confirm_setting(app.resetDefaultSetting, "ResetFactorySetting")
	