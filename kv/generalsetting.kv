#:import utils kivy.utils
#:import languageDict1 languageDict.LanguageDict



<GeneralSetting>:
	MDFloatLayout:
		md_bg_color: utils.get_color_from_hex("#D8B5AE")


		GridLayout:
			rows:1
			canvas:
				Color:
					rgb:utils.get_color_from_hex("#67697C")
				Rectangle:
					size: self.size
					pos:self.pos
			pos_hint: {"top" : 1}
			size_hint: 1,0.1
		
		GridLayout:
			rows: 1
			pos_hint:{"top": 1, "x": 0.05}
			size_hint: 0.1, 0.1
			ImageButton:
				source:"icons/home.png"
				on_release:
					app.change_screen("home_screen")

		MyButton:
			text: languageDict1.langDict["SwitchLang"][app.state]
			id: switch_lang
			pos_hint: {"top": 0.85, "x": 0.25}
			size_hint: 0.5,0.1
			on_release:
				app.switchLanguage()
		MyButton:
			text: languageDict1.langDict["SwitchMode"][app.state] + " " + str(app.mode)
			id: switch_mode
			pos_hint:{"top": 0.7, "x":0.25}
			size_hint: 0.5, 0.1
			on_release:
				app.switchMode()

		MyButton:
			text: languageDict1.langDict["SetRotationDegree"][app.state]
			id: switch_rd
			pos_hint: {"top": 0.55, "x": 0.25}
			size_hint: 0.5, 0.1
			on_release:
				app.setDegreeDialog()

		MyButton:
			text: languageDict1.langDict["ResetFactorySetting"][app.state]
			id: reset_setting
			pos_hint:{"top": 0.4, "x":0.25}
			size_hint: 0.5, 0.1
			on_release:
				app.confirm_remove_setting(app.resetDefaultSetting, "ResetFactorySetting")
	