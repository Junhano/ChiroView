#:import utils kivy.utils

<HomeScreen>:
	BoxLayout:
		orientation: "vertical"
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#D8B5AE")
			Rectangle:
				size: self.size
				pos: self.pos
		
		MDToolbar:
			id: toolbar
			md_bg_color: utils.get_color_from_hex("#67697C")
			right_action_items:[["dots-vertical", lambda x: app.change_screen("bug_setting")]]
			
			
		MDLabel:
			text: "ChiroView"
			font_style: 'H3'
			halign: "center"
			valign: "center"

		GridLayout:
			rows: 1
			pos_hint: {"top": 0.3}
			size_hint: 1, 0.1
			ImageButton:
				source: "icons/icons8-slr-camera-64.png"
				on_release:
					app.capture()
			ImageButton: 
				source: "icons/icons8-photo-gallery-100.png"
				on_release:
					app.open_photos()

		GridLayout:
			rows: 1			
			canvas:
				Color:
					rgb:utils.get_color_from_hex("#67697C")
				Rectangle:
					size: self.size
					pos:self.pos
			pos_hint: {"top": 0.1}
			size_hint:1,0.1
			ImageButton:
				source:"icons/home.png"
				on_release:
					app.change_screen("home_screen")
			ImageButton:
				source:"icons/OpenGalleryButton.png"
				on_release:
					app.change_screen("third_screen")
			ImageButton:
				source: "icons/photoshopButton.png"
				on_release:
					app.change_screen("second_screen") if app.mode == 0 else app.change_screen("second_screen_b")

			
		
