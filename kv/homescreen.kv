#:import utils kivy.utils

<HomeScreen>:
	MDBoxLayout:
		orientation: "vertical"
		md_bg_color: app.theme_cls.opposite_bg_light

		
		MDToolbar:
			id: toolbar
			md_bg_color: app.theme_cls.bg_darkest
			right_action_items:[["dots-vertical", lambda x: app.BugSettingDialog()]]
			
		MDLabel:
			text: "ChiroView"
			font_style: 'H3'
			halign: "center"
			valign: "center"

		GridLayout:
			rows: 1
			pos_hint: {"top": 0.3}
			size_hint: 1, 0.15
			ImageButton:
				source: "icons/icons8-slr-camera-64.png"
				on_release:
					app.capture()
			ImageButton: 
				source: "icons/icons8-photo-gallery-100.png"
				on_release:
					app.open_photos()

		GridLayout:
			rows: 1			
			canvas:
				Color:
					rgb:app.theme_cls.bg_darkest
				Rectangle:
					size: self.size
					pos:self.pos
			pos_hint: {"top": 0.1}
			size_hint:1,0.145
			ImageButton:
				source:"icons/home.png"
				on_release:
					app.change_screen("home_screen")
			ImageButton:
				source:"icons/OpenGalleryButton.png"
				on_release:
					app.change_screen("third_screen")
			ImageButton:
				source: "icons/photoshopButton.png"
				on_release:
					app.change_screen("second_screen") if app.mode == 0 else app.change_screen("second_screen_b")


			
		
