#:import utils kivy.utils
#:import languageDict1 languageDict.LanguageDict
#:import MDFloatLayout kivymd.uix.floatlayout.MDFloatLayout
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDFillRoundFlatIconButton kivymd.uix.button.MDFillRoundFlatIconButton
<HomeScreen>:	
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'icons/BackGround.jpeg'

	MDFloatLayout:
		md_bg_color: 0,0,0,0
	
		MDBoxLayout:
			orientation: "horizontal"
		
			pos_hint: {"top": 1}
			size_hint: 1, 0.1
			canvas.before:
				Color:
					rgba: 0,0,0,1
				Line:
					width: 1
					rectangle: self.x, self.y, self.width, self.height 
			MyButton:
				background_color: 0,0,0,0
				size_hint: 0.2, 1
				text: languageDict1.langDict["Sample"][app.state]
				on_release:
					app.change_picture('TestImage/HumanFront.png') if app.default_image else app.confirm_setting(app.sampleReplace, "SampleReplace")
			Label:
				size_hint: 0.6, 1
				text: "ChiroView"
			
			MyButton:
				background_color: 0,0,0,0
				size_hint: 0.2, 1
				text: languageDict1.langDict["Login"][app.state]
				on_release:
					print('Login')
			
		MyButton:
			background_color: 0,0,0,0
			text: languageDict1.langDict["ChangeSecondScreen"][app.state]	
			pos_hint: {"top": 0.9, "x":0.7}
			size_hint: 0.3, 0.1
			on_release:
				app.change_screen("second_screen") if not app.default_image else app.BeginDialog()
		



		MDBoxLayout:
			
			pos_hint: {"top": 0.9}
			size_hint: 1, 0.78
			canvas.before:
				Color:
					rgba: 0,0,0,1
				Line:
					width: 1
					rectangle: self.x, self.y, self.width, self.height
		
		MDFillRoundFlatIconButton:
			text_color: 0,0,0,1
			icon: "microscope"
			font_name: 'Font/NotoSansSC-Regular.otf'
			text: languageDict1.langDict["StartDiagosis"][app.state]
			md_bg_color: utils.get_color_from_hex('#00c7ff')
			pos_hint: {"top": 0.75, "x" : 0.25}
			size_hint: 0.5, 0.1
			on_release:
				app.BeginDialog()
				
		
		MyButton:
			background_color: 0,0,0,0
			text: languageDict1.langDict["Saved"][app.state]
			pos_hint: {"top": 0.5, "x": 0.25}
			size_hint: 0.1, 0.1	
			on_release:		
				print('Saved image')
		
		MyButton:
			background_color: 0,0,0,0
			text: languageDict1.langDict["GeneralSetting"][app.state]
			pos_hint: {"top": 0.5, "x": 0.75}
			size_hint: 0.1, 0.1
			on_release:
				app.change_screen("general_setting")	

		
		GridLayout:
			rows: 1
			pos_hint: {"top": 0.12}
			size_hint: 1, 0.12
			MyButton:
				background_color: 0,0,0,0
				text: languageDict1.langDict["About"][app.state]
				on_release:
					app.change_screen('help')

			MyButton:
				background_color: 0,0,0,0
				text: languageDict1.langDict["Contact"][app.state]
				on_release:
					app.Contact()


