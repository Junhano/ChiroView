#:import utils kivy.utils
#:import languageDict1 languageDict.LanguageDict



<About>:
	FloatLayout:
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#D8B5AE")
			Rectangle:
				size: self.size
				pos: self.pos

		GridLayout:
			rows:1
			canvas:
				Color:
					rgb:utils.get_color_from_hex("#67697C")
				Rectangle:
					size: self.size
					pos:self.pos
			pos_hint: {"top" : 1}
			size_hint: 1,0.1
		
		GridLayout:
			rows: 1
			pos_hint:{"top": 1, "x": 0.05}
			size_hint: 0.1, 0.1
			ImageButton:
				source:"icons/home.png"
				on_release:
					app.change_screen("home_screen")

