#:import utils kivy.utils
#:import languageDict1 languageDict.LanguageDict

<Button>:
	font_name: 'Font/NotoSansSC-Regular.otf'

<Label>:
	font_name: 'Font/NotoSansSC-Regular.otf'

<SecondScreen>:
	image_change: modifyimage
	FloatLayout:
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#D8B5AE")
			Rectangle:
				size: self.size
				pos: self.pos
		
		GridLayout:
			rows:1 
			canvas:
				Color:
					rgb:utils.get_color_from_hex("#67697C")
				Rectangle:
					size: self.size
					pos:self.pos
			pos_hint: {"top": 1}
			size_hint:1,0.1
		

		
		Image:
			source:"icons/no-camera.png"
			default_image: True
			pos_hint: {"top": 0.9, "x": 0.1}
			size_hint:0.8,0.55
			id: modifyimage
			
		Button:
			pos_hint: {"top": 0.97, "x": 0.3}
			size_hint: 0.4, 0.06
			text: languageDict1.langDict["ClearAllCanvas"][app.state]
			on_release: app.clear_all(modifyimage)

			
		
		GridLayout:
			cols: 2
			rows: 2
			pos_hint: {"top": 0.3}
			size_hint: 1, 0.1
			Label: 
				text: languageDict1.langDict["VerticalLine"][app.state]
			TextInput:
				hint_text: languageDict1.langDict["EnterNumber"][app.state]
				multiline: False
				id: verticalLine
			Label: 
				text: languageDict1.langDict["HorizontalLine"][app.state]
			TextInput:
				hint_text: languageDict1.langDict["EnterNumber"][app.state]
				multiline: False
				id: horizontalLine
		
		Button: 
			pos_hint: {"top": 0.19, "x": 0.1}
			size_hint: 0.2, 0.07
			text: languageDict1.langDict["Draw"][app.state]
			on_release:
				if not modifyimage.default_image and verticalLine.text != "" and horizontalLine.text != "": app.modify_image(verticalLine.text, horizontalLine.text,modifyimage) 
				verticalLine.text = ""
				horizontalLine.text = ""
				

	
		Button:
			pos_hint: {"top":0.19, "x": 0.4}
			size_hint: 0.2, 0.07
			text: languageDict1.langDict["Clear"][app.state]
			on_release:
				app.clean_image(modifyimage)		
		
		
		
		Button:
			pos_hint:{"top": 0.19, "x": 0.7}
			size_hint: 0.2, 0.07
			text: languageDict1.langDict["Save"][app.state]
			on_release:
				print(modifyimage.default_image)
		
		
		
		
		GridLayout:
			rows: 1			
			canvas:
				Color:
					rgb:utils.get_color_from_hex("#67697C")
				Rectangle:
					size: self.size
					pos:self.pos
			pos_hint: {"top": 0.1}
			size_hint:1,0.1
			ImageButton:
				source:"icons/home.png"
				on_release:
					app.change_screen("home_screen")
			ImageButton:
				source:"icons/OpenGalleryButton.png"
				on_release:
					app.change_screen("third_screen")
			ImageButton:
				source: "icons/photoshopButton.png"
				on_release:
					app.change_screen("second_screen")
